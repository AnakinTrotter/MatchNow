<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:layout_marginTop="?attr/actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="24dp" />

        <!-- Circular Profile Picture -->
        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile_placeholder"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circle_background"
            android:clipToOutline="true" />

        <!-- User Name and Age -->
        <TextView
            android:id="@+id/nameAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alex, 25"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <!-- Love Language -->
        <TextView
            android:id="@+id/loveLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Love Language: Quality Time"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- User Bio in Quotes -->
        <TextView
            android:id="@+id/bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&quot;Coffee lover and museum enthusiast.&quot;"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Edit Profile Button -->
        <Button
            android:id="@+id/editProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_marginBottom="24dp" />

        <!-- User Photos: Three square photos stacked vertically -->
        <LinearLayout
            android:id="@+id/photosContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/photo1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:maxHeight="300dp"
                android:adjustViewBounds="true"
                android:src="@drawable/photo_placeholder"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_rect_background" />

            <ImageView
                android:id="@+id/photo2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:maxHeight="300dp"
                android:adjustViewBounds="true"
                android:src="@drawable/photo_placeholder"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_rect_background" />

            <ImageView
                android:id="@+id/photo3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:maxHeight="300dp"
                android:adjustViewBounds="true"
                android:src="@drawable/photo_placeholder"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_rect_background" />
        </LinearLayout>

        <!-- Logout Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout of Profile" />
    </LinearLayout>
</ScrollView>
